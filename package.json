{
  "name": "proxy-ai-app",
  "version": "1.0.1",
  "description": "Secure, downloadable AI assistant.",
  "main": "dist/electron/main.js",
  "scripts": {
    "build:ts": "tsc",
    "start": "cross-env NODE_ENV=development yarn build:ts && electron .",
    "start:prod": "cross-env NODE_ENV=production yarn build:ts && electron .",
    "build": "cross-env NODE_ENV=production yarn build:ts && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/generative-ai": "^0.24.0",
    "@supabase/supabase-js": "^2.50.0",
    "axios": "^1.8.4",
    "cross-env": "^7.0.3",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.2",
    "microphone-stream": "^6.0.1",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "electron": "^31.2.1",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.proxyai.assistant",
    "productName": "Proxy AI Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "public/**/*",
      "dist/**/*",
      "!src/**/*",
      "!**/*.ts",
      "!**/*.map"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "srikarpunna",
      "repo": "proxy-ai-releases",
      "private": false
    }
  }
}
